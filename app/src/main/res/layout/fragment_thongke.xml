<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thongKe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="#a1cab2"
                card_view:cardCornerRadius="40dp"
                card_view:cardBackgroundColor="#93b5d7"
                card_view:cardElevation="10dp"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Khoảng thu:"
                            android:textColor="#232121" />

                        <TextView
                            android:id="@+id/tvThongKeKhoangThu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="0"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Loại thu:"
                            android:textColor="#232121" />

                        <TextView
                            android:id="@+id/tvThongKELoaiTHu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="0"

                            android:textColor="#f5f5f5" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:paddingLeft="20dp"
                            android:text="Tổng"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/tvTongKhoangThu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="0"
                            android:paddingLeft="20dp"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="#a1cab2"
                card_view:cardCornerRadius="40dp"
                card_view:cardBackgroundColor="#93b5d7"
                card_view:cardElevation="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:text="Khoảng Chi:"
                            android:textColor="#c536f1" />
                        <TextView
                            android:id="@+id/tvThongKeKhoangChi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="0"
                            android:textColor="#f7f7f7" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:paddingLeft="20dp"
                            android:text="Loại Chi:"
                            android:textColor="#c536f1" />

                        <TextView
                            android:id="@+id/tvThongKeLoaiChi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="0"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:paddingLeft="20dp"
                            android:text="Tổng:"
                            android:textColor="#c536f1" />

                        <TextView
                            android:id="@+id/tvTongKhoangChi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="0"
                            android:textColor="#ffffff" />
                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#a1cab2"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="#93b5d7"
        card_view:cardElevation="10dp"
        android:layout_marginLeft="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Tổng thu nhập:"
                android:textColor="#611d1d"/>

            <TextView
                android:id="@+id/tvThongKeTong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="0"

                android:textColor="#ffffff"
                android:textSize="15dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:paddingBottom="5dp"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:textColor="#bf0b0b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng thu nhâp theo tháng: "/>
    <TextView
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:layout_marginTop="-10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại thu: "/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Spinner">

        </Spinner>
        <TextView
            android:textSize="15dp"
            android:id="@+id/tvTongTheoThang"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tổng theo tháng"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khoảng thu: "/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Spinnerkt">

        </Spinner>
        <TextView
            android:textSize="15dp"
            android:id="@+id/tvTongTheoThangKt"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tổng theo tháng"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khoảng chi: "/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Spinnerlc">

        </Spinner>
        <TextView
            android:textSize="15dp"
            android:id="@+id/tvTongTheoThanglc"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tổng theo tháng"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại chi: "/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Spinnerkc">

        </Spinner>
        <TextView
            android:textSize="15dp"
            android:id="@+id/tvTongTheoThangkc"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tổng theo tháng"/>
    </LinearLayout>

</LinearLayout>